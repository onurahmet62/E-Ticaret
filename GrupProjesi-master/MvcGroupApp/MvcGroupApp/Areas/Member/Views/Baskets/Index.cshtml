        <th>
            @Html.DisplayNameFor(model => model.user.UserId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BasketPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
